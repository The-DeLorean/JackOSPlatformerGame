        return;
    }

    //called every "cycle" to draw the game
    method void renderGame(){
        do Screen.clearScreen();

        //Scoreboard drawing
        do Screen.setColor(true);
        do Screen.drawRectangle(0, 238, 511, 240);
	    do Output.moveCursor(22,0);
	    do Output.printString("Score: 0");

        // Map drawing

        //Player drawing
        do player1.draw();
        return;
    }
}